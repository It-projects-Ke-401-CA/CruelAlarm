<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.weiaett.cruelalarm.photo_manager.PhotoManagerFragment">

    <com.weiaett.cruelalarm.graphics.AutofitRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recyclerViewPhotoGrid"
        app:layoutManager="GridLayoutManager"
        android:scrollbars="vertical"
        android:columnWidth="84dp"
        tools:listitem="@layout/grid_photo_layout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/fragment_photo_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.weiaett.cruelalarm.graphics.AutofitRecyclerView>

</RelativeLayout>
